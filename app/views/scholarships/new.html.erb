<div class="form-wrapper col s12 m8 l8 offset-l2">
    <h4>新しい奨学金を追加する</h4>
    <%= form_for @scholarship do |form| %>

      <%= form.label :name,"奨学金の名前", :class=>"input-field"%>
      <%= form.text_field :name, :class=>"input-field" %>

      <%= form.label :url,"奨学金のURL", :class=>"input-field" %>
      <%= form.text_field :url, :class=>"input-field" %>

      <%= form.label :start_date, "出願期間から", :class=>"input-field" %>
      <%= form.text_field :start_date , :class=>"datepicker"%>

      <%= form.label :close_date, "出願期間まで", :class=>"input-field" %>
      <%= form.text_field :close_date , :class=>"datepicker"%>

      <%= form.label :status, "あなたの現在の状況を選択してください"%>
      <%= form.select :status, [["高校生",1],["大学生",2]],:class=>"input-field" %>

      <%= form.submit '追加してやる！', :class=>"blue-text waves-effect waves-light btn-large " %>
    <% end %>
</div>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function(){
        $('.datepicker').datepicker();
    });
    $(document).ready(function(){
        $('select').formSelect();
    });
</script>